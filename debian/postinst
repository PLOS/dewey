#!/bin/sh
# postinst script for dewey
#
# see: dh_installdeb(1)

set -e

# summary of how this script can be called:
#        * <postinst> `configure' <most-recently-configured-version>
#        * <old-postinst> `abort-upgrade' <new version>
#        * <conflictor's-postinst> `abort-remove' `in-favour' <package>
#          <new-version>
#        * <postinst> `abort-remove'
#        * <deconfigured's-postinst> `abort-deconfigure' `in-favour'
#          <failed-install-package> <version> `removing'
#          <conflicting-package> <version>
# for details, see http://www.debian.org/doc/debian-policy/ or
# the debian-policy package


case "$1" in
    configure)
      echo " * If this is the first time installing dewey on this system,"
      echo "   you will need to create a postgres database, and edit"
      echo "   /etc/default/dewey to match. Then restart dewey:"
      echo ""
      echo "     for service in {dewey,dewey-worker,dewey-scheduler}; do"
      echo "       service \$service restart;"
      echo "     done"
      echo ""
      echo " * Fixing permissions on /opt/dewey"

      chown -R dewey:dewey /opt/dewey

      echo ""
      echo " * Attempting to run migrations; this might fail depending"
      echo "   on the status of your database"

      su -c "/usr/bin/dewey-manage.sh migrate" dewey || true

      echo ""
      echo " * (re)starting services"

      service dewey restart
      service dewey-worker restart
      service dewey-scheduler restart

    ;;

    abort-upgrade|abort-remove|abort-deconfigure)
    ;;

    *)
        echo "postinst called with unknown argument \`$1'" >&2
        exit 1
    ;;
esac

# dh_installdeb will replace this with shell code automatically
# generated by other debhelper scripts.

#DEBHELPER#

exit 0
