#!/bin/sh
# postinst script for dewey
#
# see: dh_installdeb(1)

set -e

# summary of how this script can be called:
#        * <postinst> `configure' <most-recently-configured-version>
#        * <old-postinst> `abort-upgrade' <new version>
#        * <conflictor's-postinst> `abort-remove' `in-favour' <package>
#          <new-version>
#        * <postinst> `abort-remove'
#        * <deconfigured's-postinst> `abort-deconfigure' `in-favour'
#          <failed-install-package> <version> `removing'
#          <conflicting-package> <version>
# for details, see http://www.debian.org/doc/debian-policy/ or
# the debian-policy package


case "$1" in
    configure)
      . /usr/share/debconf/confmodule
      SECRET=$(python2 -c 'import random; import string; print "".join([random.SystemRandom().choice(string.digits + string.letters) for i in range(100)])')
      GET="db_get dewey"
      cat << EOF > /etc/default/dewey
export DJANGO_SETTINGS_MODULE="$GET/settings_module"
export DEWEY_SECRET_KEY="$SECRET"
export DEWEY_POSTGRES_HOST="$GET/pg_host"
export DEWEY_POSTGRES_PORT="$GET/pg_port"
export DEWEY_POSTGRES_USER="$GET/pg_user"
export DEWEY_POSTGRES_PASSWORD="$GET/pg_password"
export DEWEY_JIRA_USERNAME="$GET/jira_user"
export DEWEY_JIRA_PASSWORD="$GET/jira_password
export PDNS_API_URL="$GET/pdns_uri"
export PDNS_API_KEY="$GET/pdns_key"
export DEWEY_VAULT_PASSWORD="$GET/vault_password"
EOF

      echo " * If this is the first time installing dewey on this system,"
      echo "   you will need to create a postgres database, then restart dewey:"
      echo ""
      echo "     for service in {dewey,dewey-worker,dewey-scheduler}; do"
      echo "       service \$service restart;"
      echo "     done"
      echo ""
      echo " * Fixing permissions on /opt/dewey"

      chown -R dewey:dewey /opt/dewey

      echo ""
      echo " * Attempting to run migrations; this might fail depending"
      echo "   on the status of your database"

      su -c "/usr/bin/dewey-manage.sh migrate" dewey || echo " * migrations failed, please check on your database."

      echo ""
      echo " * (re)starting services"

      service dewey restart || true
      service dewey-worker restart || true
      service dewey-scheduler restart || true

    ;;

    abort-upgrade|abort-remove|abort-deconfigure)
    ;;

    *)
        echo "postinst called with unknown argument \`$1'" >&2
        exit 1
    ;;
esac

# dh_installdeb will replace this with shell code automatically
# generated by other debhelper scripts.

#DEBHELPER#

exit 0
