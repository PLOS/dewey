#!/bin/sh
# postinst script for dewey
#
# see: dh_installdeb(1)

set -e

# summary of how this script can be called:
#        * <postinst> `configure' <most-recently-configured-version>
#        * <old-postinst> `abort-upgrade' <new version>
#        * <conflictor's-postinst> `abort-remove' `in-favour' <package>
#          <new-version>
#        * <postinst> `abort-remove'
#        * <deconfigured's-postinst> `abort-deconfigure' `in-favour'
#          <failed-install-package> <version> `removing'
#          <conflicting-package> <version>
# for details, see http://www.debian.org/doc/debian-policy/ or
# the debian-policy package


case "$1" in
    configure)
      . /usr/share/debconf/confmodule
      db_get dewey/settings_module && echo export DJANGO_SETTINGS_MODULE=\"$RET\" > /etc/default/dewey
      db_get dewey/secret_key && echo export DEWEY_SECRET_KEY=\"$RET\" >> /etc/default/dewey
      db_get dewey/pg_host && echo export DEWEY_POSTGRES_HOST=\"$RET\"  >> /etc/default/dewey
      db_get dewey/pg_port && echo export DEWEY_POSTGRES_PORT=\"$RET\"  >> /etc/default/dewey
      db_get dewey/pg_user && echo export DEWEY_POSTGRES_USER=\"$RET\"  >> /etc/default/dewey
      db_get dewey/pg_password && echo export DEWEY_POSTGRES_PASSWORD=\"$RET\" >> /etc/default/dewey
      db_get dewey/jira_user && echo export DEWEY_JIRA_USER=\"$RET\" >> /etc/default/dewey
      db_get dewey/jira_password && echo export DEWEY_JIRA_PASSWORD=\"$RET\" >> /etc/default/dewey
      db_get dewey/pdns_uri && echo export PDNS_API_URL=\"$RET\" >> /etc/default/dewey
      db_get dewey/pdns_key && echo export PDNS_API_KEY=\"$RET\" >> /etc/default/dewey
      db_get dewey/vault_password && echo export DEWEY_VAULT_PASSWORD=\"$RET\" >> /etc/default/dewey

      echo " * If this is the first time installing dewey on this system,"
      echo "   you will need to create a postgres database, then restart dewey:"
      echo ""
      echo "     for service in {dewey,dewey-worker,dewey-scheduler}; do"
      echo "       service \$service restart;"
      echo "     done"
      echo ""
      echo " * Fixing permissions on /opt/dewey"

      chown -R dewey:dewey /opt/dewey

      echo ""
      echo " * Attempting to run migrations; this might fail depending"
      echo "   on the status of your database"

      su -c "/usr/bin/dewey-manage.sh migrate" dewey || echo " * migrations failed, please check on your database."

      echo ""
      echo " * (re)starting services"

      service dewey restart || true
      service dewey-worker restart || true
      service dewey-scheduler restart || true

    ;;

    abort-upgrade|abort-remove|abort-deconfigure)
    ;;

    *)
        echo "postinst called with unknown argument \`$1'" >&2
        exit 1
    ;;
esac

# dh_installdeb will replace this with shell code automatically
# generated by other debhelper scripts.

#DEBHELPER#

exit 0
